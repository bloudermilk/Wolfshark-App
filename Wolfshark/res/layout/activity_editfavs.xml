<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/background" >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp" >

    <!-- android:id="@+id/endtext"    //had been inside RelativeLayout & caused problems -->

    <TextView
        android:id="@+id/edit_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:text="@string/edit_favs"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <org.example.wolfshark.InstantAutoComplete
        android:id="@+id/favs1"
        android:layout_width="235dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_Title"
        android:layout_alignParentLeft="true"
        android:completionThreshold="1"
        android:hint="@string/buildingHint" />
     
     <Spinner
        android:id="@+id/room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/favs1"
        android:layout_toRightOf="@+id/favs1" />
     
     <org.example.wolfshark.InstantAutoComplete
        android:id="@+id/favs2"
        android:layout_width="235dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favs1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:completionThreshold="1"
        android:hint="@string/buildingHint" />
     
     <Spinner
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/favs2"
        android:layout_toRightOf="@+id/favs2" />
     
    <org.example.wolfshark.InstantAutoComplete
        android:id="@+id/favs3"
        android:layout_width="235dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favs2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:completionThreshold="1"
        android:hint="@string/buildingHint" />
     
     <Spinner
        android:id="@+id/room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/favs3"
        android:layout_toRightOf="@+id/favs3" />
     
     <org.example.wolfshark.InstantAutoComplete
        android:id="@+id/favs4"
        android:layout_width="235dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favs3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:completionThreshold="1"
        android:hint="@string/buildingHint" />
     
     <Spinner
        android:id="@+id/room4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/favs4"
        android:layout_toRightOf="@+id/favs4" />
     
     <org.example.wolfshark.InstantAutoComplete
        android:id="@+id/favs5"
        android:layout_width="235dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favs4"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dip"
        android:completionThreshold="1"
        android:hint="@string/buildingHint" />
     
     <Spinner
        android:id="@+id/room5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/favs5"
        android:layout_toRightOf="@+id/favs5" />
     
    <Button
        android:id="@+id/saveFavs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/favs5"
        android:onClick="onSaveFavs"
        android:text="@string/save_favs" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/favs1"
        android:layout_alignParentLeft="true"
        android:text="Favorite #1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favs1"
        android:text="Favorite #2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favs2"
        android:text="Favorite #3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favs3"
        android:text="Favorite #4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favs4"
        android:text="Favorite #5"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
</ScrollView>